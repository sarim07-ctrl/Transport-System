    FILE 1 
#ifndef DATA_H
#define DATA_H

#include <QString>

struct Bus {
    QString driverName;
    QString license;
    QString busNumber;
    QString busType;
    QString route;
    QString timing;
    int totalSeats;
    int bookedSeats;
};

extern Bus buses[20];
extern int busCount;

#endif

